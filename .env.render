# Fantasy Football MCP Server - Render Environment Variables
# Copy this to .env and fill in your values

# Yahoo API Credentials (Required)
YAHOO_CONSUMER_KEY=your_consumer_key_here
YAHOO_CONSUMER_SECRET=your_consumer_secret_here
YAHOO_ACCESS_TOKEN=your_access_token_here
YAHOO_REFRESH_TOKEN=your_refresh_token_here
YAHOO_GUID=your_yahoo_guid_here

# OAuth Configuration for Claude.ai
# Set DEBUG=true to see detailed logs about OAuth attempts
DEBUG=true

# Allow flexible client IDs and redirect URIs for Claude.ai
# Use * to allow all during debugging, then restrict once you know the exact values
ALLOWED_CLIENT_IDS=Claude,claude-ai,claude.ai,anthropic,mcp-client,*
ALLOWED_REDIRECT_URIS=https://claude.ai/api/mcp/auth_callback,https://claude.ai/oauth/callback,https://claude.ai/*

# OAuth client secret (generate a secure random string)
OAUTH_CLIENT_SECRET=generate_a_secure_random_string_here

# CORS origins (allow Claude.ai)
CORS_ORIGINS=https://claude.ai,https://*.claude.ai,http://localhost:*

# Render will set this automatically
# PORT=8080

# Your Render deployment URL (Render sets RENDER_EXTERNAL_URL automatically)
# RENDER_EXTERNAL_URL=https://fantasy-football-mcp-server.onrender.com